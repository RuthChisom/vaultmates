# ============================================================
# VaultMates – Environment Configuration
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# RPC endpoint (e.g. Flow testnet, Sepolia, Anvil local)
RPC_URL=https://testnet.evm.nodes.onflow.org

# Deployer / admin private key
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Public address that will own all contracts
DEPLOYER_ADDRESS=0xYOUR_DEPLOYER_ADDRESS

# Address of the off-chain AI oracle (posts Claude recommendations on-chain)
# For testing, this can be the same as DEPLOYER_ADDRESS
AI_ORACLE_ADDRESS=0xYOUR_AI_ORACLE_ADDRESS

# Governance quorum in basis points (5000 = 50%)
QUORUM_BPS=5000

# Voting window in seconds (259200 = 3 days)
VOTING_DURATION=259200

# Etherscan / block explorer API key (for contract verification)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Optional: Lit Protocol project ID (Module 6 – Privacy/Security)
LIT_PROJECT_ID=
